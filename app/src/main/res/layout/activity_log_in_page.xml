<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow_200"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MainActName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="OnlineShoppingApp"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/noUserLogged_productDetailsA"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/yellow_200"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_user_logged_in"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="showUserDropDownMenu"/>

        <ImageButton
            android:id="@+id/exitIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/yellow_200"
            app:srcCompat="@drawable/ic_baseline_exit_to_app_24"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="showUserDropDownMenu"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:tint="@color/yellow_500"
            app:srcCompat="@drawable/ic_baseline_login_24" />

        <EditText
            android:id="@+id/email_login_act"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawablePadding="10dp"
            android:background="@drawable/login_bg"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:padding="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/username_login_act"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:drawablePadding="10dp"
            android:background="@drawable/login_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/firstname_login_act"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname"
            android:drawablePadding="10dp"
            android:background="@drawable/login_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:padding="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/lastname_login_act"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname"
            android:drawablePadding="10dp"
            android:background="@drawable/login_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:padding="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/password_login_act"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:background="@drawable/login_bg"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:padding="10dp"/>

        <Button
            android:id="@+id/login_createAccount_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/yellow_500"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:strokeColor="@color/yellow_500"
            app:strokeWidth="1dp"/>

        <TextView
            android:id="@+id/change_option_createAccount_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't you have an account? Create now"
            android:textColor="@color/text"
            android:layout_margin="5dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow_200"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hamburgerIcon"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/yellow_200"
            android:onClick="showCategoriesDropDownMenu"
            app:srcCompat="@drawable/hamburger_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/yellow_200"
            app:srcCompat="@drawable/ic_baseline_home_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/cartIcon"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/yellow_200"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</LinearLayout>